{
  "name": "shooting-trainer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 3000",
    "lint": "eslint",
    "deploy:heroku": "heroku container:push web -a shooting-trainer && heroku container:release web -a shooting-trainer",
    "docker:dev": "docker run --rm -it -p 3000:3000 -v \"$PWD\":/app -v shooting-trainer_nm:/app/node_modules --name shooting-trainer shooting-trainer-dev:latest"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.3"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "@eslint/eslintrc": "^3"
  }
}
